require_relative 'app'

Sequel.extension :migration

namespace :db do
  task :migrate do

    if ENV['SCH_VERSION']
      version = "-M #{ENV['SCH_VERSION']}"
    end
    
    system "sequel -E " + 
           "#{version} " + 
           "-m db/migrations postgres://#{ENV['DB_USER']}:" +
           "#{ENV['DB_PASSWORD']}@#{ENV['DB_HOST']}:" +
           "#{ENV['DB_PORT']}/#{ENV['DB_NAME']}"
  end
end
